<Page loaded="loaded">
    <ActionBar title="Groceries"></ActionBar>
    <FlexboxLayout>
        <StackLayout class="form">
            <Image src="~/images/logo.png" />

            <TextField text="{{ email }}" hint="Email Address" keyboardType="email"
                autocorrect="false" autocapitalizationType="none" class="input input-border"
                id="email" />
            <TextField text="{{ password }}" hint="Password" secure="true"
                class="input input-border" />

            <Button text="Sign in" class="btn btn-primary" tap="signIn" />
            <Button text="Sign up for Groceries" tap="register" />

        </StackLayout>
    </FlexboxLayout>
</Page>